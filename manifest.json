{
    "manifest_version": 3,
    "name": "Monospace Font Replacer",
    "version": "1.0",
    "description": "Replace font family with 'monospace' on a website",
    "icons": {
      "48": "images/glasses-32.png"
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/glasses-128.png"
    }
  }