{
    "manifest_version": 2,
    "name": "Dislexy Reader",
    "version": "0.10",
    "description" : "Extension pour faciliter la lecture de dislexyques",

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "Image/eye-care_32.png",
        "default_popup": "popup.html"
}, 
    "content_scripts": [
{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
}
    ],

    "background.service_worker" : {
        "scripts" : ["background.js"],
        "persistent" : false
    },
    "icons": {
    "16": "Image/eye-care_16.png",
    "24": "Image/eye-care_24.png",
    "32": "Image/eye-care_32.png",
    "128": "Image/eye-care_128.png"
    }
    
    }

